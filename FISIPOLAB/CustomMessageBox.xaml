<Window x:Class="FISIPOLAB_.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FISIPOLAB_"
        mc:Ignorable="d"
        Title="CustomMessageBox" Height="205" Width="320" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <Image x:Name="ImgQuestion" Margin="12,46,225,91" HorizontalAlignment="Center"/>
        <TextBlock x:Name="MessageTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Text="Message" Margin="70,53,0,0"/>

        <Border Background="LightGray" Margin="0,132,-20,0" Padding="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="1"  Margin="0,0,0,0">
                <Button Content="No" Width="70" Height="20" Margin="0,0,10,5" Click="NoButton_Click"/>
                <Button Content="Sí" Width="70" Height="20" Margin="0,0,20,5" Click="YesButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

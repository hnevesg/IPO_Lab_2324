<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FISIPOLAB_"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="FISIPOLAB_.MainWindow"
        mc:Ignorable="d"
        Title="FISIPOLAB" Height="666" WindowStartupLocation="CenterScreen" Width="1200" Background="LightGray" ResizeMode="CanMinimize">
    <Window.Resources>
        <LinearGradientBrush x:Key="ButtonBackground1" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF0065C6" Offset="1"/>
            <GradientStop Color="#FF00BEFF" Offset="0"/>
            <GradientStop Color="#FF0D94FF" Offset="0.732"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Grid x:Name="gridMain">
        <Grid.DataContext>
            <local:MainConfiguration/>
        </Grid.DataContext>
        <Grid.RowDefinitions>
            <RowDefinition Height="91*"/>
            <RowDefinition Height="470*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="168*"/>
            <ColumnDefinition Width="692*"/>
            <ColumnDefinition Width="169*"/>

            <ColumnDefinition Width="149*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="gridBg" Grid.ColumnSpan="5" HorizontalAlignment="Left" Height="646" Grid.RowSpan="3" VerticalAlignment="Top" Width="1205">
            <Image x:Name="imgBg" Margin="2,-1,5,1" Source="{Binding urlFondo}"/>
        </Grid>
        <Grid x:Name="gridMainMenu" Grid.ColumnSpan="5" Grid.RowSpan="3" d:IsHidden="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="110*"/>
                <RowDefinition Height="69*"/>
                <RowDefinition Height="275*"/>
                <RowDefinition Height="92*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="187*"/>
                <ColumnDefinition Width="864*"/>
                <ColumnDefinition Width="149*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="10,10,0,23" Grid.Column="1" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left" Width="642">
                <Image Height="55" Width="253" Source="/img/arrow.png" Stretch="Fill"/>
                <Label x:Name="lblNavegar" Content="¡Empieza a navegar!" HorizontalContentAlignment="Center" Height="53" Width="384" FontSize="34" FontFamily="Georgia Pro" Foreground="{Binding ColorLetra}" FontWeight="Bold" HorizontalAlignment="Center"/>
            </StackPanel>
            <Label x:Name="lblBienvenida" HorizontalContentAlignment="Center" FontSize="34" FontFamily="Georgia Pro" Grid.Column="1" Grid.Row="2" Margin="92,2,0,0" Width="712" Foreground="{Binding ColorLetra}" Content="" VerticalAlignment="Top" HorizontalAlignment="Left" Height="65"/>
            <Image x:Name="imgUsuarioMini_Copiar2" 
                Margin="255,100,224,0" Grid.Column="1" Source="/img/user_profile_picture.png" Grid.RowSpan="2"/>
            <GroupBox Grid.Row="3"  Grid.Column="1" Height="259" Header="Sobre Ti" Margin="67,0,35,0" VerticalAlignment="Center" FontWeight="Bold" Foreground="{Binding ColorLetra}" Background="{Binding ColorPanel}">
                <StackPanel x:Name="UserStackPanel" Margin="0,0,-2,0">
                    <Label x:Name="lblNombreUsuario" Content="Nombre: " Margin="10,0,-2,0" Height="36" FontWeight="Normal" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>
                    <Label x:Name="lblApellidosUsuario" Content="Apellidos: " Margin="10,0,-2,0" Height="37" FontWeight="Normal" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>
                    <Label x:Name="lblDNIUsuario" Content="DNI: " Margin="10,0,-2,0" Height="38" FontWeight="Normal" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>
                    <Label x:Name="lblFechaNacimientoUsuario" Content="Fecha de Nacimiento: " Margin="10,0,-2,0" Height="35" FontWeight="Normal" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>
                    <Label x:Name="lblDireccionUsuario" Content="Dirección: " Margin="10,0,-2,0" Height="37" FontWeight="Normal" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>
                    <Label x:Name="lblEmailUsuario" Content="E-mail: " Margin="10,0,-2,0" Height="35" FontWeight="Normal" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>

                </StackPanel>

            </GroupBox>
        </Grid>
        <Grid x:Name="gridPlanificacionCalendario" Grid.ColumnSpan="5" Grid.RowSpan="3" d:IsHidden="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="101*"/>
                <RowDefinition Height="55*"/>
                <RowDefinition Height="464*"/>
                <RowDefinition Height="26*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="187*"/>
                <ColumnDefinition Width="481*"/>
                <ColumnDefinition Width="383*"/>
                <ColumnDefinition Width="149*"/>
            </Grid.ColumnDefinitions>
            <Calendar x:Name="calendarCitas" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" BorderBrush="#FF0786FF" Background="White" RenderTransformOrigin="0.5,0.5" Height="175" Width="184" Style="{Binding FontStyle, ElementName=calendarCitas}" FontFamily="Georgia Pro" Margin="97,92,0,0" SelectedDatesChanged="calendarCitas_SelectedDatesChanged">
                <Calendar.Effect>
                    <DropShadowEffect/>
                </Calendar.Effect>
                <Calendar.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Calendar.RenderTransform>
            </Calendar>
            <Button x:Name="btnCancelarCita" Grid.Column="1" HorizontalAlignment="Left" Margin="44,5,0,0" Grid.Row="1" VerticalAlignment="Top" Height="37" Width="145" FontFamily="Georgia Pro" Click="btnCancelarCita_Click" Cursor="Hand" ToolTip="Cancela la cita seleccionada" Background="{Binding ColorBotonNoPresionado}">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/img/papelera.png" Margin="0,0,5,0" Height="24" Width="25"/>
                    <Label Content="Cancelar cita" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}" Height="34" Width="113" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="BtnNuevaCitaMenu" Grid.Column="1" HorizontalAlignment="Left" Margin="199,5,0,0" Grid.Row="1" VerticalAlignment="Top" Height="37" Width="140" FontFamily="Georgia" Click="BtnNuevaCitaMenu_Click" Cursor="Hand" ToolTip="Añade una cita al calendario" Background="{Binding ColorBotonNoPresionado}">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/img/reloj.png" Margin="0,0,5,0" Height="29" Width="29"/>
                    <Label Content="Nueva cita" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}" Height="34" Width="93" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
                </StackPanel>
            </Button>

            <DataGrid x:Name="dgCitas"  Grid.Column="2" Margin="0,1,26,28" Grid.Row="1" Grid.RowSpan="2" FontFamily="Georgia Pro" AutoGenerateColumns="False" Background="{Binding ColorBotonNoPresionado}" FontSize="{Binding TamanioLetra}" IsReadOnly="True">
                <DataGrid.Effect>
                    <DropShadowEffect/>
                </DataGrid.Effect>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Hora" Binding="{Binding hora}"/>
                    <DataGridTextColumn Header="Paciente" Binding="{Binding paciente}"/>
                    <DataGridTextColumn Header="Sanitario" Binding="{Binding sanitario}"/>
                    <DataGridTextColumn Header="Duracion" Binding="{Binding duracion}"/>
                </DataGrid.Columns>
                <System:String>#ItemsSource="Usuario.cs"</System:String>
            </DataGrid>
        </Grid>
        <Grid x:Name="gridPlanificacionNuevaCita" Grid.ColumnSpan="5" Grid.RowSpan="3" d:IsHidden="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="101*"/>
                <RowDefinition Height="77*"/>
                <RowDefinition Height="348*"/>
                <RowDefinition Height="95*"/>
                <RowDefinition Height="25*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="187*"/>
                <ColumnDefinition Width="583*"/>
                <ColumnDefinition Width="281*"/>
                <ColumnDefinition Width="148*"/>
            </Grid.ColumnDefinitions>
            <GroupBox x:Name="gboxNuevaCita" Grid.Column="1" Header="Nueva Cita" Grid.Row="2" Grid.ColumnSpan="2" Margin="377,10,21,18" BorderBrush="{Binding ColorLetra}" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}" BorderThickness="2" Cursor="" FontWeight="Bold" Background="{Binding ColorPanel}"/>

            <Calendar x:Name="calNuevaCita" Grid.Column="1" Grid.Row="2" BorderBrush="#FF0786FF" Background="White" Foreground="{x:Null}" RenderTransformOrigin="0.5,0.5" Style="{Binding FontStyle, ElementName=calendarCitas}" FontFamily="Georgia Pro" Margin="99,71,0,103" HorizontalAlignment="Left" Width="180" SelectedDatesChanged="calNuevaCita_SelectedDatesChanged">
                <Calendar.Effect>
                    <DropShadowEffect/>
                </Calendar.Effect>
                <Calendar.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Calendar.RenderTransform>
            </Calendar>
            <Label x:Name="lblFecha" Grid.Column="1" Content="Fecha de la cita:" HorizontalContentAlignment="Right" Margin="0,66,281,0" Grid.Row="2" FontFamily="Georgia Pro" Height="29" VerticalAlignment="Top" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}" Grid.ColumnSpan="2" HorizontalAlignment="Right" Width="155"/>
            <Label x:Name="lblHora" Grid.Column="1" Content="Hora de la cita:" HorizontalContentAlignment="Right" Margin="0,100,281,0" Grid.Row="2" FontFamily="Georgia Pro" Height="29" VerticalAlignment="Top" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}" Grid.ColumnSpan="2" HorizontalAlignment="Right" Width="155"/>
            <Label x:Name="lblPaciente" Grid.Column="1" Content="Paciente atendido:" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Margin="0,138,281,0" Grid.Row="2" Width="171" FontFamily="Georgia Pro" Height="29" VerticalAlignment="Top" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}" Grid.ColumnSpan="2"/>
            <Label x:Name="lblSanitario" Grid.Column="1" Content="Sanitario encargado:" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Margin="0,173,281,0" Grid.Row="2" Width="180" FontFamily="Georgia Pro" Height="29" VerticalAlignment="Top" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}" Grid.ColumnSpan="2"/>
            <Label x:Name="lblDuracion" Grid.Column="1" Content="Duración estimada:" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Margin="0,210,281,0" Grid.Row="2" Width="180" FontFamily="Georgia Pro" Height="29" VerticalAlignment="Top" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}" Grid.ColumnSpan="2"/>
            <TextBox x:Name="txtbFecha" ToolTip="Introduce la fecha o haz click en un día del calendario" Grid.Column="2" Margin="0,66,178,0" Grid.Row="2" TextWrapping="Wrap" Text=" / /" FontFamily="Georgia Pro" Height="29" VerticalAlignment="Top" HorizontalContentAlignment="Center" Cursor="IBeam" Foreground="{Binding ColorLetra}" Background="{Binding ColorBotonNoPresionado}" FontSize="{Binding TamanioLetra}"/>
            <TextBox x:Name="txtbHora" ToolTip="Introduce la hora de la cita" Grid.Column="2" Margin="0,100,220,0" Grid.Row="2" TextWrapping="Wrap" Text=" : " FontFamily="Georgia Pro" Height="29" VerticalAlignment="Top" HorizontalContentAlignment="Center" Cursor="IBeam" Foreground="{Binding ColorLetra}" Background="{Binding ColorBotonNoPresionado}" FontSize="{Binding TamanioLetra}"/>
            <TextBox x:Name="txtbPaciente"  ToolTip="Introduce el email del paciente" Grid.Column="2" Margin="0,136,75,0" Grid.Row="2" TextWrapping="Wrap" Text="example@mail.com" FontFamily="Georgia Pro" Height="29" VerticalAlignment="Top" HorizontalContentAlignment="Center" TextAlignment="Justify" Cursor="IBeam" Foreground="{Binding ColorLetra}" Background="{Binding ColorBotonNoPresionado}" FontSize="{Binding TamanioLetra}" GotFocus="txtbPaciente_GotFocus" LostFocus="txtbPaciente_LostFocus"/>
            <TextBox x:Name="txtbSanitario" ToolTip="Introduce el email del sanitario" Grid.Column="2" Margin="0,173,75,0" Grid.Row="2" TextWrapping="Wrap" Text="example@mail.com" FontFamily="Georgia Pro" Height="29" VerticalAlignment="Top" HorizontalContentAlignment="Center" TextAlignment="Justify" Cursor="IBeam" Foreground="{Binding ColorLetra}" Background="{Binding ColorBotonNoPresionado}" FontSize="{Binding TamanioLetra}" LostFocus="txtbSanitario_LostFocus" GotFocus="txtbSanitario_GotFocus"/>
            <TextBox x:Name="txtbDuracion" ToolTip="Introduce la duración de la sesión" Grid.Column="2" Margin="0,210,0,0" Grid.Row="2" TextWrapping="Wrap" FontFamily="Georgia Pro" HorizontalAlignment="Left" Width="53" Height="29" HorizontalContentAlignment="Center" VerticalAlignment="Top" Cursor="IBeam" Foreground="{Binding ColorLetra}" Background="{Binding ColorBotonNoPresionado}" FontSize="{Binding TamanioLetra}"/>
            <Label x:Name="lblMinutos" Grid.Column="2" Content="Minutos" HorizontalAlignment="Left" Margin="54,210,0,0" Grid.Row="2" Width="93" FontFamily="Georgia Pro" Height="29" VerticalAlignment="Top" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>
            <Button Grid.Column="1" x:Name="btnCrearCita" HorizontalAlignment="Left" Margin="548,252,0,0" Grid.Row="2" VerticalAlignment="Top" Height="50" Width="125" Click="btnCrearCita_Click" Grid.ColumnSpan="2" Cursor="Hand" Background="{Binding ColorBotonNoPresionado}" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/img/menu/mas.png" Margin="0,0,5,0" Height="21" Width="18"/>
                    <TextBlock Text="Crear cita" VerticalAlignment="Center" Foreground="{Binding ColorLetra}"/>
                </StackPanel>
            </Button>

        </Grid>
        <Grid x:Name="gridPacientesLista" Grid.ColumnSpan="5" Grid.RowSpan="3" d:IsHidden="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="101*"/>
                <RowDefinition Height="141*"/>
                <RowDefinition Height="276*"/>
                <RowDefinition Height="105*"/>
                <RowDefinition Height="23*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="187*"/>
                <ColumnDefinition Width="864*"/>
                <ColumnDefinition Width="149*"/>
            </Grid.ColumnDefinitions>
            <TabControl x:Name="TabControlPac" TabStripPlacement="Right" Grid.Column="1" Grid.Row="2" Margin="263,1,0,0">
                <TabItem x:Name="TabDatosPersonalesPac" Header="Datos Personales" Margin="0,-2,-2,-18" FontSize="{Binding TamanioLetra}" Background="{Binding ColorBotonPresionado}" FontFamily="Georgia Pro">
                    <Grid x:Name="grDatosIndividualesPac" Background="{Binding ColorBotonNoPresionado}" Margin="0,0,0,1">
                        <Canvas VerticalAlignment="Top" Height="256" Margin="-2,12,0,0" HorizontalAlignment="Left" Width="466">
                            <StackPanel Height="275" Width="394" Canvas.Top="2" Canvas.Left="11" HorizontalAlignment="Center" VerticalAlignment="Top">
                                <StackPanel Orientation="Horizontal" Margin="48,0,0,0" HorizontalAlignment="Right" Width="306">
                                    <Label x:Name="lblDNIIndPr1" HorizontalContentAlignment="Right" Content="DNI" Width="92" Height="31" Margin="0,0,0,0" FontFamily="Georgia Pro" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>
                                    <TextBox x:Name="txtDNIIndPr1" HorizontalAlignment="Center" Text="{Binding PacienteSeleccionado.DNI}"  Width="98" Height="24" Margin="5,0,0,6" FontFamily="Georgia Pro" IsEnabled="False" Background="{Binding ColorBotonPresionado}" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}" VerticalAlignment="Bottom"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="48,0,0,0" Width="306">
                                    <Label x:Name="lblTlfIndPr1" HorizontalContentAlignment="Right" Content="Teléfono" Width="92" Height="30" Margin="0,0,0,0" FontFamily="Georgia Pro" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>
                                    <TextBox x:Name="txtTlfIndPr1" HorizontalAlignment="Left" Text="{Binding PacienteSeleccionado.Telefono}" Width="98" Height="24" Margin="5,0,0,6" FontFamily="Georgia Pro" IsEnabled="False" Background="{Binding ColorBotonPresionado}" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Width="384" Height="32" HorizontalAlignment="Right" Margin="18,0,0,0">
                                    <Label x:Name="lblFechaNacIndPr1" HorizontalContentAlignment="Right" Content="Fecha de Nacimiento" Width="176" Height="32" FontFamily="Georgia Pro"  Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>
                                    <TextBox x:Name="txtFechaNacIndPr1" Text="{Binding PacienteSeleccionado.FechaNacimiento}" Width="99" Height="24" FontFamily="Georgia Pro" IsEnabled="False" Background="{Binding ColorBotonPresionado}" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="48,0,0,0" HorizontalAlignment="Right" Width="301" Height="37">
                                    <Label x:Name="lblDireccionIndPr1" HorizontalContentAlignment="Right" Content="Dirección" Width="92" Height="31" Margin="0,0,0,0" FontFamily="Georgia Pro" VerticalAlignment="Center" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>
                                    <TextBox x:Name="txtDireccionIndPr1" Width="208" Height="24" Text="{Binding PacienteSeleccionado.Direccion}" Cursor="" TextWrapping="Wrap" FontFamily="Georgia Pro" IsEnabled="False" Background="{Binding ColorBotonPresionado}" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Width="269" Height="32">
                                    <Label x:Name="lblEmailIndPr1" HorizontalContentAlignment="Right" Content="Email" Width="55" Height="31" FontFamily="Georgia Pro" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>
                                    <TextBox x:Name="txtEmailIndPr1" Width="208" Height="24" Text="{Binding PacienteSeleccionado.Email}" Margin="5,0,0,6" FontFamily="Georgia Pro" IsEnabled="False" Background="{Binding ColorBotonPresionado}" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Width="268">
                                    <Label x:Name="lblSexoIndPr1" HorizontalContentAlignment="Right" Content="Sexo" Width="55" Height="31" FontFamily="Georgia Pro" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>
                                    <TextBox x:Name="txtSexoIndPr1" Width="207" Height="24" Text="{Binding PacienteSeleccionado.Sexo}" Margin="5,0,0,6" FontFamily="Georgia Pro" IsEnabled="False" Background="{Binding ColorBotonPresionado}" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Width="421" HorizontalAlignment="Right" >
                                    <Label x:Name="lblCirugiaPreviaInd" HorizontalContentAlignment="Right" Content="Cirugía previa" Width="206" Height="31" FontFamily="Georgia Pro" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>
                                    <CheckBox x:Name="checkCirugiaPreviaInd" Width="15" Height="15" Margin="5,0,0,6" FontFamily="Georgia Pro" IsEnabled="False"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Width="422" HorizontalAlignment="Right">
                                    <Label x:Name="lblFumadorInd" HorizontalContentAlignment="Right" Content="Fumador" Width="207" Height="29" Margin="0,0,0,0" FontFamily="Georgia Pro" VerticalAlignment="Center" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>
                                    <CheckBox x:Name="checkFumadorInd" Width="15" Height="14" Margin="5,0,0,6" FontFamily="Georgia Pro" IsEnabled="False"/>
                                </StackPanel>
                            </StackPanel>
                        </Canvas>
                    </Grid>
                </TabItem>
                <TabItem x:Name="TabHistorialCitas" Header="Historial de citas" Margin="0,18,-2,-36" FontSize="{Binding TamanioLetra}" Background="{Binding ColorBotonPresionado}" FontFamily="Georgia Pro">
                    <Grid x:Name="grHistorialCitasPac" Background="{Binding ColorBotonNoPresionado}">
                        <DataGrid x:Name="dgrHistorialPac" Visibility="Hidden" Margin="0,0,1,0" MinRowHeight="20" Focusable="False" FontSize="{Binding TamanioLetra}" Background="{Binding ColorPanel}" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Fecha" Binding="{Binding fecha}" />
                                <DataGridTextColumn Header="Hora" Binding="{Binding hora}" />
                                <DataGridTextColumn Header="Profesional" Binding="{Binding sanitario}" />
                                <DataGridTemplateColumn Header="Estado">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Rectangle Width="16" Height="16">
                                                <Rectangle.Style>
                                                    <Style TargetType="{x:Type Rectangle}">
                                                        <Setter Property="Fill" Value="Transparent"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding estado}" Value="Pendiente">
                                                                <Setter Property="Fill" Value="Yellow"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding estado}" Value="Cancelada">
                                                                <Setter Property="Fill" Value="Red"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding estado}" Value="Finalizada">
                                                                <Setter Property="Fill" Value="Green"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Rectangle.Style>
                                            </Rectangle>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Label x:Name="LeyendaPacs" HorizontalAlignment="Center" Visibility="Hidden">
                            <StackPanel Orientation="Horizontal" Margin="0,220,0,0">
                                <Rectangle Width="16" Height="16" Fill="Red" Margin="0,0,4,0"/>
                                <TextBlock Text="Cancelada" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>

                                <Rectangle Width="16" Height="16" Fill="Green" Margin="0,0,4,0"/>
                                <TextBlock Text="Finalizada" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>

                                <Rectangle Width="16" Height="16" Fill="Yellow" Margin="0,0,4,0"/>
                                <TextBlock Text="Pendiente" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{Binding ColorLetra}" FontSize="{Binding TamanioLetra}"/>

                            </StackPanel>
                        </Label>
                        <Label x:Name="lblSinCitas" Visibility="Hidden" Content="No hay citas para este paciente" Margin="0,100,0,0" HorizontalAlignment="Center"/>
                    </Grid>
                </TabItem>
                <TabItem x:Name="TabInformes" Header="Informes Médicos" Margin="0,35,-2,-56" FontSize="{Binding TamanioLetra}" Background="{Binding ColorBotonPresionado}" FontFamily="Georgia Pro">
                    <Grid x:Name="grInformes" Margin="0,0,1,0">
                        <Label x:Name="lblSinInformes" Content="No constan informes para este paciente" Visibility="Hidden" Margin="0,100,0,0" HorizontalAlignment="Center" />
                        <DataGrid x:Name="dgInformesPaciente" IsReadOnly="True" AutoGenerateColumns="False" Background="{Binding ColorBotonNoPresionado}" FontSize="{Binding TamanioLetra}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Detalles">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button x:Name="BtnVerInforme" ToolTip="Haz click para ver los detalles del informe." Click="BtnVerInforme_Click" Background="{Binding ColorBotonNoPresionado}" FontSize="{Binding TamanioLetra}" BorderBrush="White">
                                            <Image Width="20" Height="20"
                Source="{Binding detalles}"/>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Fecha" Binding="{Binding fecha_informe}"/>
                                <DataGridTextColumn Header="Dolencia" Binding="{Binding dolencia}"/>
                                <DataGridTextColumn Header="Tratamiento" Binding="{Binding tratamiento}"/>
                                <DataGridTextColumn Header="Prueba" Binding = "{Binding pruebas}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                </TabItem>
            </TabControl>
            <DataGrid x:Name="dgInfoPacientes" Grid.Column="1" Margin="21,2,601,0" Grid.Row="2"  AutoGenerateColumns="False" SelectionChanged="dgInfoPacientes_SelectionChanged" Background="{Binding ColorBotonNoPresionado}" FontSize="{Binding TamanioLetra}" FontFamily="Georgia Pro" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre"  Width="80" Binding="{Binding Nombre}"/>
                    <DataGridTextColumn Header="Apellidos" Width="80" Binding="{Binding Apellidos}"/>
                    <DataGridTextColumn Header="DNI" Width="80" Binding="{Binding DNI}"/>
